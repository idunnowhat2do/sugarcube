{
    "rules" : {
        "array-bracket-spacing"       : [ 2, "never" ],
        "arrow-body-style"            : [ 2, "as-needed" ],
        "arrow-parens"                : [ 2, "as-needed" ],
        "arrow-spacing"               : [ 2, { "before" : true, "after" : true } ],
        "brace-style"                 : [ 2, "stroustrup", { "allowSingleLine" : true } ],
        "camelcase"                   : [ 2, { "properties" : "always" } ],
        "comma-dangle"                : [ 2, "never" ],
        "comma-style"                 : [ 2, "last" ],
        "consistent-return"           : 0,
        "dot-notation"                : 2,
        "eol-last"                    : 2,
        "eqeqeq"                      : [ 2, "allow-null" ],
        "indent"                      : [ 2, "tab", { "SwitchCase" : 0, "VariableDeclarator" : 1 } ],
        "key-spacing"                 : [ 2, { "align" : "colon", "beforeColon" : true, "afterColon" : true } ],
        "keyword-spacing"             : 2,
        "linebreak-style"             : [ 2, "unix" ],
        "max-len"                     : [ 1, 120, 4 ],
        "new-cap"                     : 2,
        "no-array-constructor"        : 2,
        "no-case-declarations"        : 2,
        "no-console"                  : 0,
        "no-const-assign"             : 2,
        "no-eval"                     : 2,
        "no-extra-parens"             : 1,
        "no-fallthrough"              : 2,
        "no-iterator"                 : 2,
        "no-loop-func"                : 2,
        "no-mixed-spaces-and-tabs"    : [ 0, "smart-tabs" ],
        "no-multi-spaces"             : 0,
        "no-multiple-empty-lines"     : [ 2, { "max" : 2 } ],
        "no-nested-ternary"           : 2,
        "no-new"                      : 0,
        "no-new-object"               : 2,
        "no-param-reassign"           : [ 2, { "props" : true } ],
        "no-sequences"                : 2,
        "no-trailing-spaces"          : [ 2, { "skipBlankLines" : true } ],
        "no-undef"                    : 2,
        "no-underscore-dangle"        : [ 0, { "allowAfterThis" : true } ],
        "no-unneeded-ternary"         : 2,
        "no-unused-vars"              : [ 2, { "vars" : "all", "args" : "after-used" } ],
        "no-use-before-define"        : [ 2, "nofunc"],
        "no-useless-concat"           : 2,
        "no-var"                      : 2,
        "object-curly-spacing"        : [ 2, "always" ],
        "object-shorthand"            : [ 2, "always", { "ignoreConstructors" : false } ],
        "one-var"                     : [ 0, "never" ],
        "padded-blocks"               : [ 2, "never" ],
        "prefer-arrow-callback"       : 2,
        "prefer-const"                : 2,
        "prefer-template"             : 2,
        "quote-props"                 : [ 2, "as-needed" ],
        "quotes"                      : [ 1, "single", "avoid-escape" ],
        "radix"                       : [ 2, "always" ],
        "semi"                        : [ 2, "always" ],
        "space-before-blocks"         : [ 2, "always" ],
        "space-before-function-paren" : [ 2, { "anonymous" : "always", "named" : "never" } ],
        "space-in-parens"             : [ 2, "never" ],
        "space-infix-ops"             : 2,
        "space-unary-ops"             : [ 2, { "words" : true, "nonwords": false } ],
        "spaced-comment"              : [ 2, "always", {  "block" : { "exceptions" : [ "*" ], "markers": [ "!" ] }, "line" : { "exceptions" : [ "-" ] } } ],
        "strict"                      : [ 1, "safe" ],
        "wrap-iife"                   : [ 2, "inside" ],
        "yoda"                        : [ 2, "never", { "exceptRange" : true } ]
    },
    "globals": {
        "DEBUG"    : false,
        "TWINE1"   : false,
        "LZString" : false,
        "saveAs"   : false
    },
    "env" : {
        "browser" : true,
        "es6"     : true,
        "jquery"  : true
    }
}
